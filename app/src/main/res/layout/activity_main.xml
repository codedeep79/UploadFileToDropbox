<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.trungnguyenhau.uploadfiletodropbox.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPLOAD FILE TO DROPBOX"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#f2d74f"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect With Dropbox"
        android:textAllCaps="false"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#11b4ea"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button_uploadfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload File With Dropbox"
        android:textAllCaps="false"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#11b4ea"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button_listfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List File In Dropbox"
        android:textAllCaps="false"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#11b4ea"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linearlayout_container_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

</LinearLayout>
